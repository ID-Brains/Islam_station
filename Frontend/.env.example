# Islam Station - Frontend Environment Variables
# Copy this file to .env.development or .env.production and fill in the values

# API Configuration
PUBLIC_API_URL=http://localhost:8000

# Application
PUBLIC_APP_NAME="The Islamic Guidance Station"
PUBLIC_APP_VERSION=1.0.0

# Features
PUBLIC_ENABLE_NOTIFICATIONS=true
PUBLIC_ENABLE_OFFLINE_MODE=true

# Logging
PUBLIC_LOG_LEVEL=DEBUG
PUBLIC_ENABLE_REMOTE_LOGGING=false
PUBLIC_SENTRY_DSN=

# Analytics (Optional)
PUBLIC_GA_TRACKING_ID=
PUBLIC_ENABLE_ANALYTICS=false

# Geolocation
PUBLIC_DEFAULT_LATITUDE=24.7136
PUBLIC_DEFAULT_LONGITUDE=46.6753
PUBLIC_LOCATION_TIMEOUT=10000
PUBLIC_LOCATION_MAX_AGE=60000
PUBLIC_LOCATION_HIGH_ACCURACY=true
PUBLIC_MAX_ACCEPTABLE_ACCURACY=5000

# Prayer Times
PUBLIC_DEFAULT_CALCULATION_METHOD=Egyptian
PUBLIC_ENABLE_PRAYER_NOTIFICATIONS=true

# Cache
PUBLIC_CACHE_VERSION=1
PUBLIC_ENABLE_SERVICE_WORKER=true

# API Timeouts (milliseconds)
PUBLIC_API_TIMEOUT=30000
PUBLIC_API_RETRY_ATTEMPTS=3
PUBLIC_API_RETRY_DELAY=1000

# CORS (for development)
PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4321

# Security
PUBLIC_ENABLE_CSP=true
PUBLIC_ENABLE_HTTPS_ONLY=false

# Note: Variables prefixed with PUBLIC_ are exposed to the client
# Never put sensitive keys or secrets in these variables
