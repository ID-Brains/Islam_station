---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Sign Up - Islam Station">
  <main class="w-full flex min-h-screen">
    <div class="relative flex-1 hidden items-center justify-center bg-gradient-to-br from-primary via-secondary to-accent lg:flex">
      <!-- Islamic Background Image -->
      <div class="absolute inset-0 bg-cover bg-center bg-no-repeat opacity-100" style="background-image: url('https://images.unsplash.com/photo-1584551246679-0daf3d275d0f?w=1920&h=1080&fit=crop&crop=center'); filter: sepia(0.3) hue-rotate(200deg) saturate(0.8) brightness(0.9);"></div>

      <!-- Theme Toggle Button -->
      <div class="absolute top-6 right-6 z-20">
        <label class="swap swap-rotate btn btn-ghost btn-circle">
          <input type="checkbox" class="theme-controller opacity-0 absolute" value="dark" />

          <!-- sun icon -->
          <svg class="swap-off w-6 h-6 fill-current text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z" />
          </svg>

          <!-- moon icon -->
          <svg class="swap-on w-6 h-6 fill-current text-white" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z" />
          </svg>
        </label>
      </div>

      <div class="relative z-10 w-full max-w-md text-center">
        <!-- Islamic geometric pattern overlay -->
        <div class="absolute inset-0 opacity-20">
          <svg viewBox="0 0 400 400" class="w-full h-full">
            <defs>
              <pattern id="islamic-pattern" x="0" y="0" width="60" height="60" patternUnits="userSpaceOnUse">
                <circle cx="30" cy="30" r="3" fill="white"/>
                <path d="M30,15 L45,30 L30,45 L15,30 Z" fill="none" stroke="white" stroke-width="1"/>
                <circle cx="30" cy="30" r="20" fill="none" stroke="white" stroke-width="0.5"/>
              </pattern>
            </defs>
            <rect width="100%" height="100%" fill="url(#islamic-pattern)"/>
          </svg>
        </div>

        <!-- Logo/Brand -->
        <div class="mb-8">
          <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h1 class="text-white text-2xl font-bold">Islam Station</h1>
        </div>

        <div class="space-y-6">
          <h3 class="text-white text-3xl font-bold leading-tight">
            Connect with Your Faith
          </h3>
          <p class="text-primary-content/80 text-lg">
            Join thousands of Muslims staying connected to their prayers, Quran, and Islamic practices.
          </p>

          <!-- Islamic features highlight -->
          <div class="grid grid-cols-2 gap-4 mt-8">
            <div class="bg-white/10 rounded-lg p-4 backdrop-blur-sm">
              <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-2">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-white text-sm font-medium">Prayer Times</p>
            </div>
            <div class="bg-white/10 rounded-lg p-4 backdrop-blur-sm">
              <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-2">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-white text-sm font-medium">Quran Daily</p>
            </div>
            <div class="bg-white/10 rounded-lg p-4 backdrop-blur-sm">
              <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-2">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-white text-sm font-medium">Qibla</p>
            </div>
            <div class="bg-white/10 rounded-lg p-4 backdrop-blur-sm">
              <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-2">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M9.383 3.076A1 1 0 0110 4v12a1 1 0 01-1.707.707L4.586 13H2a1 1 0 01-1-1V8a1 1 0 011-1h2.586l3.707-3.707a1 1 0 011.09-.217z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-white text-sm font-medium">Adhan</p>
            </div>
          </div>

          <div class="flex items-center justify-center -space-x-2 mt-8">
            <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=40&h=40&fit=crop&crop=face" class="w-10 h-10 rounded-full border-2 border-white" alt="User"/>
            <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=40&h=40&fit=crop&crop=face" class="w-10 h-10 rounded-full border-2 border-white" alt="User"/>
            <img src="https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=40&h=40&fit=crop&crop=face" class="w-10 h-10 rounded-full border-2 border-white" alt="User"/>
            <div class="w-10 h-10 rounded-full border-2 border-white bg-white/20 flex items-center justify-center">
              <span class="text-white text-xs font-bold">5K+</span>
            </div>
            <p class="text-primary-content/80 text-sm font-medium translate-x-4">
              Trusted by Muslims worldwide
            </p>
          </div>
        </div>
      </div>

      <!-- Decorative blur effects -->
      <div class="absolute inset-0 my-auto h-[500px] bg-gradient-to-r from-primary/30 via-secondary/25 to-accent/10 blur-[118px]"></div>
    </div>

    <div class="flex-1 flex items-center justify-center min-h-screen bg-base-100">
      <div class="w-full max-w-md space-y-8 px-4 sm:px-0">
        <!-- Mobile logo -->
        <div class="lg:hidden text-center">
          <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h1 class="text-base-content text-xl font-bold">Islam Station</h1>
        </div>

        <div class="text-center lg:text-left">
          <h3 class="text-base-content text-2xl font-bold sm:text-3xl">
            Join Islam Station
          </h3>
          <p class="text-base-content/70 mt-2">
            Already have an account?
            <a href="/login" class="font-medium text-primary hover:text-primary-focus">
              Sign in
            </a>
          </p>
        </div>

        <!-- Social login buttons -->
        <div class="grid grid-cols-3 gap-x-3">
          <button class="btn btn-outline btn-neutral">
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
          </button>
          <button class="btn btn-outline btn-neutral">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </button>
          <button class="btn btn-outline btn-neutral">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </button>
        </div>

        <div class="relative">
          <span class="block w-full h-px bg-base-300"></span>
          <p class="inline-block w-fit text-sm bg-base-100 text-base-content/60 px-2 absolute -top-2 inset-x-0 mx-auto">
            Or continue with email
          </p>
        </div>

        <form class="space-y-5">
          <div>
            <label class="label-text font-medium">Full Name</label>
            <input
              type="text"
              required
              class="input input-bordered w-full mt-2"
              placeholder="Enter your full name"
            />
          </div>
          <div>
            <label class="label-text font-medium">Email</label>
            <input
              type="email"
              required
              class="input input-bordered w-full mt-2"
              placeholder="Enter your email"
            />
          </div>
          <div>
            <label class="label-text font-medium">Date of Birth</label>
            <input
              type="date"
              required
              class="input input-bordered w-full mt-2"
              placeholder="Select your date of birth"
            />
          </div>
          <div>
            <label class="label-text font-medium">Password</label>
            <input
              type="password"
              required
              class="input input-bordered w-full mt-2"
              placeholder="Create a password"
            />
          </div>
          <div>
            <label class="label-text font-medium">Confirm Password</label>
            <input
              type="password"
              required
              class="input input-bordered w-full mt-2"
              placeholder="Confirm your password"
            />
          </div>

          <div class="flex items-center justify-between text-sm">
            <div class="flex items-center">
              <input type="checkbox" id="terms" >
              <label for="terms" class="ml-2 text-base-content/70">I agree to the Terms & Conditions</label>
            </div>
          </div>

          <button
            type="submit"
            class="btn btn-primary w-full"
          >
            Sign Up
          </button>
        </form>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { initTheme } from '../scripts/theme.js';
  initTheme();
</script>

