# Islam Station - Backend Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/islam_station
DATABASE_POOL_SIZE=25
DATABASE_MAX_OVERFLOW=30

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Application Settings
APP_NAME="The Islamic Guidance Station"
DEBUG=false
SECRET_KEY=your-super-secret-key-here-change-this-in-production
LOG_LEVEL=INFO

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4321,http://127.0.0.1:4321

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# External APIs
NOMINATIM_API_BASE=https://nominatim.openstreetmap.org

# JWT Configuration (for authentication)
JWT_SECRET_KEY=another-super-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@islamstation.com

# Monitoring & Observability
SENTRY_DSN=
ENABLE_SENTRY=false
ENABLE_PROMETHEUS=false

# Security
ENABLE_HTTPS_REDIRECT=false
ENABLE_HSTS=false
HSTS_MAX_AGE=31536000

# Performance
ENABLE_GZIP=true
MAX_REQUEST_SIZE=10485760

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Prayer Times Configuration
DEFAULT_CALCULATION_METHOD=Egyptian
ENABLE_PRAYER_TIME_CACHE=true
PRAYER_TIME_CACHE_TTL=86400

# File Upload (Optional)
MAX_UPLOAD_SIZE=5242880
ALLOWED_UPLOAD_EXTENSIONS=jpg,jpeg,png,pdf

# Development
RELOAD=true
WORKERS=1

# Production (Uncomment for production)
# DEBUG=false
# RELOAD=false
# WORKERS=4
# LOG_LEVEL=WARN
# ENABLE_HTTPS_REDIRECT=true
# ENABLE_HSTS=true
# ENABLE_SENTRY=true

# IMPORTANT SECURITY NOTES:
# 1. Never commit .env file to version control
# 2. Generate SECRET_KEY using: openssl rand -hex 32
# 3. Generate JWT_SECRET_KEY using: openssl rand -hex 32
# 4. Use strong, unique passwords for database
# 5. Enable HTTPS in production
# 6. Restrict ALLOWED_ORIGINS to your actual domains in production
# 7. Keep all API keys and secrets secure
